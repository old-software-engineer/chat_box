<% if user.is_online? %>
  <li data-id="<%= user.id %>"><div class="<%= user.is_online? ? "user-online" : "user-offline" %>"></div><%= link_to user.email, chat_box.conversations_path(user_id: user), remote: true, method: :post %></li>
<% else %>
  <li data-id="<%= user.id %>"><div class="<%= user.is_online? ? "user-online" : "user-offline" %>"></div><%= link_to user.email, chat_box.conversations_path(user_id: user), remote: true, method: :post %></li>
<% end %>